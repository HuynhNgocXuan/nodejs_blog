<div class='mt-4'>
    <div class='row'>

        {{#each courses}}
            <div class='col-lg-3 col-sm-6'>'
                <a href='/courses/{{this.slug}}'>
                    <img
                        class='card-img-top'
                        src='{{this.image}}'
                        alt='{{this.name}}'
                    />
                </a>
                <div class='card-body'>
                    <a href='/courses/{{this.slug}}'>
                        <h5 class='card-title '>{{this.name}}</h5>
                    </a>
                    <p class='card-text'>{{this.description}}</p>
                    <a href='#' class='btn btn-primary'>Go course</a>
                </div>
            </div>
        {{/each}}

    </div>
</div>